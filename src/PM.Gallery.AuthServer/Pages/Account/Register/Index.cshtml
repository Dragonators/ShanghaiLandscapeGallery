@page
@model PM.Gallery.AuthServer.Pages.Account.Register.IndexModel

<div class="login-page">
    <div class="lead">
        <h1>注册</h1>
        <p>填写用户基本信息</p>
    </div>

	<partial name="_ValidationSummary" />
	<div class="row">

		<div class="col-sm-6">
			<div class="card">
				<div class="card-header">
					<h2>注册新用户</h2>
				</div>

				<div class="card-body">
					<form asp-page="/Account/Register/Index" asp-page-handler="create" method="post">
						<input type="hidden" asp-for="Input.ReturnUrl" />

						<div class="form-group">
							<label asp-for="Input.Username"></label>
							<input class="form-control" placeholder="Username" asp-for="Input.Username" autofocus>
						</div>
						<div class="form-group">
							<label asp-for="Input.Password"></label>
							<input type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off">
						</div>
						<button class="btn btn-primary" name="Input.Button" value="create">注册</button>
						<button class="btn btn-secondary" name="Input.Button" value="cancel">取消</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>